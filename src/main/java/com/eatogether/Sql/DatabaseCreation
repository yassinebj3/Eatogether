create table Categories (
   id INT NOT NULL ,
   nameCategory VARCHAR(50) NOT NULL,
   descriptionCategory VARCHAR(255) NOT NULL,
   PRIMARY KEY (id)
);

create table RendezVous (
   id INT NOT NULL ,
   idLiker INT NOT NULL,
   idTarget INT NOT NULL,
   idRestaurant INT NOT NULL,
   dateTodate DATE  NOT NULL,
   note varchar(255),
   PRIMARY KEY (id)
);

ALTER TABLE rendezvous
ADD isAccepted BOOLEAN DEFAULT FALSE,
ADD updateIsAccepted boolean DEFAULT false,
ADD cancelledDate boolean DEFAULT false;

ALTER TABLE users MODIFY COLUMN mail varchar(100) UNIQUE;
ALTER TABLE rendezvous MODIFY COLUMN idLiker int null
